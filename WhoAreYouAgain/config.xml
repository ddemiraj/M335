<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.WhoAreYouAgain" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WhoAreYouAgain</name>
    <description>
        A simple cordova app who will help you to remember people.
    </description>
    <author email="damiandemiraj09@gmail.com" href="http://demiraj.damian.ch">
        Damian Demiraj
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
                <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        
        <icon src="www/res/android/mipmap-mdpi/ic_launcher.webp"    density="ldpi" />
        <icon src="www/res/android/mipmap-mdpi/ic_launcher.webp"    density="mdpi" />
        <icon src="www/res/android/mipmap-hdpi/ic_launcher.webp"    density="hdpi" />
        <icon src="www/res/android/mipmap-xhdpi/ic_launcher.webp"   density="xhdpi" />
        <icon src="www/res/android/mipmap-xxhdpi/ic_launcher.webp"  density="xxhdpi" />
        <icon src="www/res/android/mipmap-xxxhdpi/ic_launcher.webp" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
